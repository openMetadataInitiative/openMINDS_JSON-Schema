{
  "$id": "https://openminds.om-i.org/types/Project?format=json-schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Structured information on a research project.",
  "properties": {
    "@id": {
      "description": "Metadata node identifier.",
      "type": "string"
    },
    "@type": {
      "const": "https://openminds.om-i.org/types/Project",
      "description": "Metadata schema identifier.",
      "type": "string"
    },
    "https://openminds.om-i.org/props/contribution": {
      "description": null,
      "items": {
        "$ref": "https://openminds.om-i.org/types/Contribution?format=json-schema",
        "type": "object"
      },
      "minItems": 1,
      "name": "contribution",
      "type": "array",
      "uniqueItems": true
    },
    "https://openminds.om-i.org/props/description": {
      "description": "Longer statement or account giving the characteristics of someone or something.",
      "name": "description",
      "type": "string"
    },
    "https://openminds.om-i.org/props/fullName": {
      "description": "Whole, non-abbreviated name of something or somebody.",
      "name": "fullName",
      "type": "string"
    },
    "https://openminds.om-i.org/props/hasPart": {
      "description": null,
      "items": {
        "else": {
          "properties": {
            "@id": {
              "format": "iri",
              "type": "string"
            }
          },
          "required": [
            "@id"
          ]
        },
        "if": {
          "required": [
            "@type"
          ]
        },
        "then": {
          "properties": {
            "@id": {
              "format": "iri",
              "type": "string"
            },
            "@type": {
              "enum": [
                "https://openminds.om-i.org/types/ValidationTest",
                "https://openminds.om-i.org/types/ValidationTestVersion",
                "https://openminds.om-i.org/types/WorkflowRecipe",
                "https://openminds.om-i.org/types/WorkflowRecipeVersion",
                "https://openminds.om-i.org/types/Dataset",
                "https://openminds.om-i.org/types/DatasetVersion",
                "https://openminds.om-i.org/types/Interface",
                "https://openminds.om-i.org/types/InterfaceVersion",
                "https://openminds.om-i.org/types/MetaDataModel",
                "https://openminds.om-i.org/types/MetaDataModelVersion",
                "https://openminds.om-i.org/types/Model",
                "https://openminds.om-i.org/types/ModelVersion",
                "https://openminds.om-i.org/types/Software",
                "https://openminds.om-i.org/types/SoftwareVersion",
                "https://openminds.om-i.org/types/LivePaper",
                "https://openminds.om-i.org/types/LivePaperVersion",
                "https://openminds.om-i.org/types/AnatomicalAtlas",
                "https://openminds.om-i.org/types/AnatomicalAtlasVersion",
                "https://openminds.om-i.org/types/CommonCoordinateFramework",
                "https://openminds.om-i.org/types/CommonCoordinateFrameworkVersion"
              ],
              "format": "iri",
              "type": "string"
            }
          },
          "required": [
            "@id"
          ]
        },
        "type": "object"
      },
      "minItems": 2,
      "name": "hasPart",
      "type": "array",
      "uniqueItems": true
    },
    "https://openminds.om-i.org/props/homepage": {
      "description": "Main website of something or someone.",
      "format": "iri",
      "name": "homepage",
      "type": "string"
    },
    "https://openminds.om-i.org/props/shortName": {
      "description": "Shortened or fully abbreviated name of something or somebody.",
      "name": "shortName",
      "type": "string"
    },
    "https://openminds.om-i.org/props/type": {
      "description": "Distinct class to which a group of entities or concepts with similar characteristics or attributes belong to.",
      "else": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "if": {
        "required": [
          "@type"
        ]
      },
      "name": "type",
      "then": {
        "properties": {
          "@id": {
            "format": "iri",
            "type": "string"
          },
          "@type": {
            "enum": [
              "https://openminds.om-i.org/types/ProjectType"
            ],
            "format": "iri",
            "type": "string"
          }
        },
        "required": [
          "@id"
        ]
      },
      "type": "object"
    }
  },
  "required": [
    "@id",
    "@type",
    "https://openminds.om-i.org/props/description",
    "https://openminds.om-i.org/props/fullName",
    "https://openminds.om-i.org/props/hasPart",
    "https://openminds.om-i.org/props/shortName",
    "https://openminds.om-i.org/props/type"
  ],
  "title": "Project",
  "type": "object"
}